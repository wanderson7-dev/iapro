<script>
// Garante que o script da UTMify foi carregado
window.addEventListener("load", () => {
setTimeout(() => {
const baseUrl = "https://go.centerpag.com/PPU38CQ31S9"; // Altere para seu destino final
let queryParams = "";

try {
if (window.utmParams && typeof window.utmParams.toString === "function") {
queryParams = window.utmParams.toString();
} else {
const urlParams = new URLSearchParams(window.location.search);
queryParams = urlParams.toString();
}
} catch (e) {
console.warn("Erro ao capturar UTMs:", e);
}

const finalUrl = baseUrl + (queryParams ? "?" + queryParams : "");
window.location.replace(finalUrl);
}, 600); // delay maior para garantir UTMify ativa
});
</script>
